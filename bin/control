#!/bin/bash

echo "control $*"
set -x

DEST_DIR=$OPENSHIFT_NGINX_DIR
CONFS_DIR=$OPENSHIFT_REPO_DIR

case "$1" in
    start)
        echo "starting..."
        for i in `ls $CONFS_DIR/*.conf.erb`
        do
            OUT=`echo $i | sed 's/.erb$//'`
            erb $i > $OUT
        done
        $DEST_DIR/sbin/nginx
    ;;
    stop)
        echo "stopping..."
        if [ -f $DEST_DIR/logs/nginx.pid ]
        then
            $DEST_DIR/sbin/nginx -s stop
        else
            echo "Nginx not running, pid file not found"
        fi
    ;;
    restart)
        echo "restarting..."
        $DEST_DIR/sbin/nginx -s stop
        sleep 3
        $DEST_DIR/sbin/nginx
    ;;
    *)
        echo "what? $1"
    ;;
esac

echo "== end control =="
