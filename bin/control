#!/bin/bash

set -x

DEST_DIR=$OPENSHIFT_DATA_DIR/nginx

case "$1" in
    start)
        echo "starting..."
        $DEST_DIR/sbin/nginx
    ;;
    stop)
        echo "stopping..."
        if [ -f $DEST_DIR/logs/nginx.pid ]
        then
            $DEST_DIR/sbin/nginx -s stop
        else
            echo "Nginx not running, pid file not found"
        fi
    ;;
    restart)
        echo "restarting..."
        $DEST_DIR/sbin/nginx -s stop
        sleep 3
        $DEST_DIR/sbin/nginx
    ;;
esac
